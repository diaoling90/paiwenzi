/* component/dialog/commonDialog.wxss */
.container{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.bg{
  position: absolute;
  width: 100%;
  height: 100vh;
  background-color: #000000;
  opacity: 0.5;
}

.content{
  width: 80%;
  padding-bottom: 40rpx;
  padding-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background:#ffffff;
  z-index: 10000;
  border-radius: 20rpx;
}

.bottomContent{
  margin-top: 35rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background:white;
  z-index: 10000;
  border-radius: 50rpx;
}

.title{
  padding-top: 20rpx;
  font-size: 50rpx;
  color: black;
}

.text{
  font-size: 40rpx;
  color: gray;
   margin-top: 20rpx;
}

.button_layout{
  width: 80vw;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 50rpx;
}

.button_sure{
  padding-left: 80rpx;
  padding-right: 80rpx;
  
}

.button_cancle{
  padding-left: 80rpx;
  padding-right: 80rpx;
}